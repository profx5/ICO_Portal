duration = .3s

.Btn
    border-radius 100px
    height 43px
    color white
    text-transform uppercase
    position relative
    min-width 210px
    font-weight 300
    font-size 16px
    line-height 1
    display block
    cursor pointer
    font-family 'Circe', 'Trebuchet MS', 'Tahoma', 'Arial', 'sans-serif'
    background transparent
    z-index 20
    transition all .3s ease
    cursor pointer
    overflow hidden
    padding-top 4px
    background-size 200% 100%
    background-position 0 0
    animation bgpout .3s
    &:hover
        animation bgpin .3s
        animation-fill-mode forwards
