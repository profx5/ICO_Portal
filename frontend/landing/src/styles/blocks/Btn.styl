    &_iconWrapper
        position absolute
        top 50%
        right 6px
        transform translateY(-50%)
        size 33px 33px
        background white
        border-radius 30px
        display flex
        flex-flow row nowrap
        justify-content center
        align-items center
        padding-left 3px
        background white
        overflow hidden
        padding-top 2px
        pointer-events none
        transition background .15s ease .2s
        &:before
            content ''
            display block
            position absolute
            size 100% 100%
            top 0
            left 0
            background blue
            transform scaleX(0)
            transform-origin bottom right
            transition transform 0.15s ease-out .15s
    &:hover &_iconWrapper:before
            transform scaleX(1)
            transform-origin bottom left

    &-animated:not(.Btn-hover):before
        transform translate3d(100%,0,0)
        transition transform .3s ease
    &-animated:not(.Btn-hover) &_iconWrapper:before
        transform translate3d(100%,0,0)
        transition transform .2s ease .15s
    &-noEvent
        pointer-events none
    &_text
        size 100% 100%
        display block
        padding 2px 35px 0
        line-height 43px
        transition transition color .2s ease
        position relative
        z-index 11
    &-pink
        background pink
        &:before
            background white
    &:not(.Btn-animate)
        padding-top 5px
    &_icon
        position absolute
        top 0
        left 0
        size 100% 100%
        &:before
            content ''
            display block
            position absolute 0 0 0 0
            background url('../img/common/svg/btn-arrow-pink.svg') no-repeat 55% 55%
            pointer-events none
            transform-origin bottom left
            transition transform .2s ease .15s
        &:after
            content ''
            display block
            position absolute 0 0 0 0
            background url('../img/common/svg/btn-arrow-white.svg') no-repeat 55% 55%
            pointer-events none
            transform scaleX(0)
            transform-origin bottom right
            transition transform .2s ease .15s
            
    &:hover &_icon:after
        transform scaleX(1)
        transform-origin bottom left
    &:hover &_icon:before
        transform scaleX(0)
        transform-origin bottom right
        
.btnWrapper
    display block
    





