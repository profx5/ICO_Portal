    &-transBlue, &-transPink, &-transWhite
        transition color .25s ease, border-color .25s ease
        border 1px solid transparent
    &-transBlue
        color blue
        border-color blue
    &-transWhite
        color white
        border-color white
    &-transPink
        color pink
        border-color pink
    &-transHoverBlue:hover
        color blue
        border-color blue
    &-transHoverPink:hover
        color pink
        border-color pink
    &-transHoverWhite:hover
        color white
        border-color white
        

    &-filledBlue
        color white
        background-color blue
    &-filledPink
        color white
        background-color pink
    &-hoverBlue:hover
        color blue
    &-hoverPink:hover
        color pink
    &-hoverWhite:hover
        color white


    &-simple
        &:before, &:after
            display none



