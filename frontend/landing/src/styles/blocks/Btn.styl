.Btn
    border-radius 100px
    height 43px
    color white
    text-transform uppercase
    padding 0 20px
    position relative
    min-width 200px
    font-weight 300
    font-size 16px
    line-height 43px
    display block
    font-family 'Circe', 'Trebuchet MS', 'Tahoma', 'Arial', 'sans-serif'
    &_iconWrapper
        position absolute
        top 50%
        right 6px
        transform translateY(-50%)
        size 33px 33px
        background white
        border-radius 30px
        display: flex
        flex-flow row nowrap
        justify-content center
        align-items center
        padding-left 3px
        padding-top 2px
        &:before
            content ''
            size 9px 13px
            display block
            background url('/img/common/svg/btn-arrow.svg')
            