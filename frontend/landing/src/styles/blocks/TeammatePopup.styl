.TeammatePopup
    width 506px
    padding 25px 30px 60px
    position relative
    overflow visible
    @media xs
        width 94vw
        padding-bottom 35px
    &_header
        font-size 25px
        font-weight 400
        letter-spacing 0.6px
        color blue
        padding-bottom 12px
        @media xs
            font-size 20px
    &_title
        font-size 16px
        font-weight 400
        line-height 1.5
        display block
        color #a2a2a2
        padding-bottom 30px
        margin-bottom 30px
        border-bottom 1px solid rgba(151,151,151,.2)
        padding-right 215px
        @media xs
            padding-right 30vw
            font-size 13px
            margin-bottom 20px
            padding-bottom 20px
    &_text
        font-size 16px
        font-weight 400
        letter-spacing 0.4px
        line-height 1.44
        color #000000
        @media xs
            font-size 14px
    [data-fancybox-close]
        size 35px 35px
        background blue url('../img/common/svg/cross.svg') no-repeat center
        background-size 13px 13px
        position absolute
        right -45px
        border-radius 50px
        top 0
        &:after
            content ''
            display none
        @media xs
            right 0
            top -45px
    &_socialLinks
        position absolute
        top 30px
        right 30px
        @media xs
            display none
    &_linkWrapper
        size 30px 30px
        border-radius 3px
        background blue
        display inline-flex
        justify-content center
        align-items center
        background-repeat no-repeat
        background-size 16px 16px
        background-position center