.AboutSection
    position relative
    &_pattern
        background white url('../img/svg/common/pattern.svg') no-repeat center

    &_container
        height 100%
        padding-top 20px
        padding-bottom 80px
    &_header
        color blue
        font-weight 500
        font-size 35px
        z-index 10
        position relative
        text-align center
        letter-spacing normal
        margin-bottom 80px
        @media xs
            font-size 22px
            margin-bottom 20px
        @media sm
            margin-bottom 110px
    &_headerPhantom
        z-index 9
        position relative
        text-align center
        @media md
            bottom -57px
    &_content
        @media md
            display flex
            flex-flow row nowrap
            justify-content center
            align-items flex-start
    &_contentText
        padding-right 12px
        padding-left 0
        @media xs
            padding 0 0
        @media sm
            padding-right 30px
            padding-left 30px
    &_text
        color #6b7c93
        font-weight 400
        &:not(:last-of-type)
            padding-bottom 20px
        &:last-of-type
            padding-bottom 50px
    &_img
        size auto 750px
        position relative
        margin-top -132px
        @media xs
            display block
            margin 0 auto 20px
            size 58vw auto
        @media sm
            height 500px
            margin -85px auto 30px
            display block
        @media md
            right 50px
    &_btnWrapper
        @media md
            white-space nowrap
    &_btn
        margin-bottom 40px
        background-image linear-gradient(90deg, #f84f78 50%, #316fdf 50%) !important
        @media xs
            width 100%
        @media sm
            width 258px
            display block
            margin-left auto
            margin-right auto
        @media md
            display inline-block !important
            margin-bottom 135px
        &:first-of-type
            @media smMinus
                margin-bottom 15px