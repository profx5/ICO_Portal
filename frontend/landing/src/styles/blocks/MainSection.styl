.MainSection
    height 100vh
    background-repeat no-repeat
    background-size cover
    position relative
    &:before
        content ''
        display block
        background rgba(50, 116, 255, 0.66);
        position absolute
        top 0
        left 0
        size 100% 100%
    &_container
        padding-top 34vh
        height 100%
    &_header
        font-size 45px
        line-height 58px
        font-weight 500
        text-transform uppercase
        color white
        text-align center
        margin-bottom 0
        padding-bottom 15px
    &_text
        color white
        text-align center
        padding-bottom 25px
    &_btn
        margin-left auto
        margin-right auto
    &_infoWrapper
        position absolute
        width 100%
        height 50px
        padding 0 15px
        bottom 52px
        left 0
        display: flex
        flex-flow row nowrap
        justify-content space-between
        align-items center
    &_websiteLink
        color white
        &:hover
            color white
    &_socialWrapper
        display: flex
        flex-flow row nowrap
        justify-content flex-start
        align-items flex-start
    &_socialText
        color white
        margin-right 20px
    &_socialIcons
        width 120px
        display: flex
        flex-flow row nowrap
        justify-content space-between
        align-items center
    &_iconWrapper svg
        // size 17.7px 14.5px
        path
            fill white
            opacity .75