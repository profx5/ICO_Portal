.MainSection
    height 100vh
    background-repeat no-repeat
    background-size cover
    background-position 50% 50%
    position relative
    &:before
        content ''
        display block
        background rgba(50, 116, 255, 0.66)
        position absolute
        top 0
        left 0
        size 100% 100%
    &_container
        padding-top 0
        display flex
        justify-content center
        align-items center
        height 100%
        @media xs
            padding-top 0
            padding-left 18px
            padding-right 18px
            display flex
            justify-content center
            align-items center
    &_header
        font-size 45px
        line-height 58px
        font-weight 500
        text-transform uppercase
        color white
        text-align center
        margin-bottom 0
        padding-bottom 17px
        @media xs
            font-size 22px
            line-height 1.32
            padding-bottom 20px
        @media sm
            padding-bottom 15px
        @media md
            padding-top 15px
        @media lg
            font-size 3vw
            line-height 1.3
            padding-bottom 20px
    &_text
        color white
        text-align center
        padding 0 0 45px
        &Br
            @media xs
                display none
        @media xs
            font-size 14px
            line-height 1.64
            padding-bottom 20px
        @media lg
            font-size 1.2vw
            line-height 1.4
    &_btn
        margin-left auto
        margin-right auto
    &_scrollIcon
        position absolute
        left 50%
        bottom 30px
        transform translateX(-50%)
        @media xs
            bottom 13px
    &_infoWrapper
        position absolute
        width 100%
        height 50px
        padding 0 40px
        bottom 52px
        left 0
        display: flex
        flex-flow row nowrap
        justify-content space-between
        align-items center
        @media xs
            flex-wrap wrap
            justify-content center
            bottom 75px
            height 65px
        @media sm
            padding 0 30px
            bottom 20px
    &_websiteLink
        color white
        &:hover
            color white
    &_socialWrapper
        display: flex
        flex-flow row nowrap
        justify-content flex-start
        align-items flex-start
    &_socialText
        color white
        margin-right 20px
    &_socialIcons
        width 120px
        display: flex
        flex-flow row nowrap
        justify-content space-between
        align-items center
    &_iconWrapper svg
        // size 17.7px 14.5px
        path
            fill white
            opacity .75