.MainSection
    height 100vh
    background-repeat no-repeat
    background-size cover
    background-position 50% 50%
    position relative
    overflow hidden
    video
        position absolute
        left 50%
        top 50%
        transform translate(-50%,-50%)
        min-height 100vh
        min-width 110vw
        width auto
        background #191c23
        display block
    &_dots
        size 100% 100%
        position absolute
        background-size cover
        background-position center
        left 0
        top 0
        z-index 15
        opacity 1
        &:nth-of-type(1)
            background-image url('../img/common/dots-3.png')
            // opacity 0
            // animation dots1 3s ease infinite
            animation-fill-mode both   
        &:nth-of-type(2)
            background-image url('../img/common/dots-1.png')
            // opacity 0
            // animation dots2 1.5s ease infinite
        &:nth-of-type(3)
            background-image url('../img/common/dots-2.png')
            // opacity 0
            // animation dots3 1.5s ease infinite
    &:before
        content ''
        display block
        background rgba(50, 116, 255, 0.66)
        // background black
        position absolute
        top 0
        left 0
        size 100% 100%
        z-index 5
    &_dotWrapper
        position absolute
        size 1000px 1000px
        top 50%
        left 50%
        transform translate3d(-50%,-50%,0)
        pointer-events none
        z-index 12
        border-radius 1000px
        overflow hidden
        // animation dots 25s linear infinite
        transform-origin 0 0
        will-change transform
    &_dot
        position absolute
        background white
        border-radius 6px
    &_bg
        background-repeat no-repeat
        background-size cover
        background-position 50% 50%
        position relative
        position absolute
        size 105% 105%
        top 50%
        left 50%
        transform translate3d(-50%,-50%,0)
        // animation mainBackground 14s ease infinite
        transform-origin 0% 0%
        will-change transform
    &_container
        padding-top 0
        display flex
        justify-content center
        align-items center
        height 100%
        z-index 10
        // transition transform .1s ease
        @media xs
            padding-top 0
            padding-left 18px
            padding-right 18px
            display flex
            justify-content center
            align-items center
    &_header
        font-size 45px
        line-height 58px
        font-weight 500
        text-transform uppercase
        color white
        text-align center
        margin-bottom 0
        padding-bottom 17px
        @media xs
            font-size 22px
            line-height 1.32
            padding-bottom 20px
        @media sm
            padding-bottom 15px
        @media md
            padding-top 15px
        @media lg
            font-size 3vw
            line-height 1.3
            padding-bottom 20px
    &_textWrapper
        @media xs
            position relative
            top -10px
    &_text
        color white
        text-align center
        padding 0 0 45px
        &Br
            @media xs
                display none
        @media xs
            font-size 14px
            line-height 1.64
            padding-bottom 20px
        @media lg
            font-size 1.2vw
            line-height 1.4
    &_btn
        margin-left auto
        margin-right auto
        background-image linear-gradient(90deg, #f84f78 50%, white 50%)
    &_scrollIcon
        position absolute
        left 50%
        bottom 30px
        transform translateX(-50%)
        z-index 12
        cursor pointer
        animation scrollArrow 1.45s ease infinite
        circle
            @media smPlus
                animation rotation 3s linear infinite
                transform-origin 46% 21%
        @media smMinus
            bottom 13px
        @media xs
            bottom 3px
    &_infoWrapper
        position absolute
        width 100%
        height 50px
        padding 0 40px
        bottom 52px
        left 0
        display: flex
        flex-flow row nowrap
        justify-content space-between
        align-items center
        @media xs
            flex-wrap wrap
            justify-content center
            bottom 87px
            height 65px
        @media sm
            padding 0 30px
            bottom 20px
        @media md
            padding 0 55px
    &_websiteLink
        color white
        &:hover
            color white
    &_socialWrapper
        display: flex
        flex-flow row nowrap
        justify-content flex-start
        align-items flex-start
    &_socialText
        color white
        margin-right 20px
    &_socialIcons
        width 145px
        display flex
        flex-flow row nowrap
        justify-content space-between
        align-items center
    &_iconWrapper:hover svg path
        transition opacity .2s ease
    &_iconWrapper:hover svg path
        opacity 1
    &_iconWrapper svg
        path
            fill white
            opacity .75