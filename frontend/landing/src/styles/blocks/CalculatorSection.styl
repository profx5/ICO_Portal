.CalculatorSection
    background-repeat no-repeat
    background-size cover
    position relative
    &:before
        content ''
        display block
        background rgba(50, 116, 255, 0.66);
        position absolute
        top 0
        left 0
        size 100% 100%
    &_container
        height 100%
        padding-top 96px
        padding-bottom 96px
    &_header, &_text
        color white
        text-align center
    &_header
        font-size 35px
        font-weight 500
        padding-bottom 13px
    &_text
        margin-bottom 70px
    &_desc
        color white
        float left
        width 100px
        padding-top 13px
        margin-right 10px
    &_inputsWrapper
        display flex
        flex-flow row wrap
        justify-content space-between
        align-items space-between
        padding-right 110px
    &_currency
        position relative
        &:before, &:after
            position absolute
            top -35px
            color white
        &:before
            content 'from'
            left 28%
        &:after
            content 'to'
            right 29%
    &_inputsWrapper-currency
        height 115px
        margin-bottom 35px
    &_inputsWrapper-currency &_input
        flex-basis 49%
        text-align center
    &_formula &_inputsWrapper-row
        margin-bottom 45px
    &_address &_input
        font-weight 300
        color white
        background transparent
        border 1px solid white
    &_inputsWrapper-row &_input
        flex-basis 70%
    &_input
        height 43px
        line-height 43px
        border-radius 3px
        padding 0 25px
        padding-top 4px
        background white
        text(16px,400,'Circe', black, 16px)
        letter-spacing .4px
    &_tip
        display inline-block
        position relative
        color white
        margin-top 20px
        &:hover
            color white
        &:before
            content ''
            dispaly block
            height 1px
            width 100%
            position absolute
            bottom 1px
            left 0
            background white