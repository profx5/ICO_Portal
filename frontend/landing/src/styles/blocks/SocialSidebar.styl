.SocialSidebar
    position fixed
    top 0
    right 0
    size 100px 100%
    display flex
    flex-flow column nowrap
    align-items center
    justify-content center
    z-index 23
    transition transform .5s ease
    transform translate3d(100%,0,0)
    @media xs
        display none !important
    &-active
        transform translate3d(0,0,0)
    &_link
        size 45px 45px
        background rgba(49,111,223,.7)
        border-radius 45px
        display flex
        flex-flow row nowrap
        justify-content center
        align-items center
        margin 7px 0
        transition all .25s ease
        path
            transition all .25s ease
        &:hover
            background white
            box-shadow 1px 4px 20px 0 rgba(157,155,192,.24)
            path
                fill rgba(49,111,223,.7)