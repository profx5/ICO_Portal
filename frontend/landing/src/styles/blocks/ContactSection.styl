.ContactSection
    background-size cover
    background-repeat no-repeat
    background-position center
    position relative
    &:before
        content ''
        display block
        background rgba(50, 116, 255, 0.86);
        position absolute
        top 0
        left 0
        size 100% 100%
    &_headerPhantom
        z-index 9
        position relative
        text-align center
        text-transform uppercase
        color rgba(255,255,255,.12)
        @media xs
            left -18px
            white-space nowrap
        @media md
            bottom -57px
    &_header
        color white
        font-weight 500
        font-size 35px
        z-index 10
        position relative
        text-align center
        letter-spacing normal
        margin-bottom 35px
        @media xs
            font-size 22px
    &_form
        padding-bottom 100px
        display block
        @media xs
            padding-bottom 50px
    &_inputsWrapper
        position relative
    &_inputsWrapper-personalData
        display flex
        flex-flow row nowrap
        justify-content space-between
        margin-bottom 50px
        @media xs
            flex-wrap wrap
            margin-bottom 0
    &_input, &_textarea
        font-size 18px
        font-family "Circe"
        font-weight 400 !important
        padding-left 10px
        padding-right 10px
        line-height unset !important
        &::-webkit-input-placeholder
            color rgba(0,0,0,.3)
    &_inputField
        flex-basis 48%
        @media xs
            flex-basis 100%
    &_inputField-required
        position relative
        &:before
            content '*'
            color red
            font-size 25px
            position absolute
            top -5px
            right -18px
    &_input
        flex-basis 100%
        width 100%
        height 43px
        line-height 43px
        border-radius 3px
        padding 0 10px
        padding-top 4px
        background white
        text(16px,400,'Circe', black, 16px)
        letter-spacing .4px
        border solid 1px #d9d9d9
        transition all .25s ease
        &.input-error
            border-color red
        @media xs
            flex-basis 100%
            margin-bottom 20px
    &_textarea
        size 100% 87px
        border-radius 3px
        background white
        border 1px solid #d9d9d9
        padding-top 8px
        padding-bottom 8px
        max-width 100%
        min-width 100%
        min-height 87px
        border solid 1px #d9d9d9
        transition all .25s ease
        &.input-error
            border-color red
    &_inputsWrapper-message
        margin-bottom 40px
    &_btnSubmit
        margin-left auto
        background-image linear-gradient(90deg, #f84f78 50%, white 50%)
        @media xs
            margin-right auto
            width 100%
    &_errorText
        font-size 18px
        color pink
        font-weight 400
        line-height 1.5
        position absolute
        bottom -30px
        left 0
        opacity 0
        visibility hidden
        transition all .3s ease
        transform translate3d(-50px,0,0)
        &-active
            transform translate3d(0,0,0)
            opacity 1
            visibility visible