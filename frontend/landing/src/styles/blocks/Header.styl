.Header
    position absolute
    width 100%
    height 90px
    left 0
    top 0
    z-index 10
    @media xs
        height 73px
    &_container
        display flex
        justify-content space-between
        align-items center
        height 100%
        @media xs
            padding 0 20px
    &_logo
        @media xs
            size 160px auto
    &_menu
        height 100%
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        display flex 
        align-items center
    &_menuList
        height 100%
    &_menuItem
        height 100%
        color white
        list-style-type none
        display inline-block
        font-weight 500
    &_menuLink
        display flex
        align-items center
        height 100%
        padding 0 13px
    &_login
        display: flex
        align-items center
    &_loginText
        font-size 15px
        font-weight 300
        text-transform uppercase
        color white
        margin-left 15px
    &_menuHamburger
        display flex
        justify-content center
        align-items center
    &_menuWrapper
        display flex
        flex-flow row nowrap
        justify-content flex-end
        align-items center
    &_menuText
        color white
        margin-right 10px
        font-weight 500
        padding-top 4px