.Header
    position absolute
    width 100%
    height 90px
    left 0
    top 0
    z-index 10
    &_container
        display flex
        justify-content space-between
        align-items center
        height 100%
    &_menu
        height 100%
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        display flex 
        align-items center
    &_menuItem
        color white
        list-style-type none
        display inline-block
        margin 0 10px
        font-weight 500
    &_login
        display: flex
        align-items center
    &_loginText
        font-size 15px
        font-weight 300
        text-transform uppercase
        color white
        margin-left 15px