.JoinPopup
    size 708px auto
    background white
    padding 50px
    overflow visible
    @media xs
        width 87vw
        padding 26px
        margin-top 100px
    &_head
        font-size 35px
        font-weight 500
        text-align center
        color blue
        font-family 'circe'
        margin-bottom 46px
        @media xs
            font-size 24px
            margin-bottom 18px
    &_inputGroup
        margin-bottom 30px
        display flex
        flex-flow row nowrap
        justify-content space-between
        align-items center
        @media xs
            flex-wrap wrap
            margin-bottom 0
    &_input, &_textarea
        width 100%
        font-size 18px
        font-family 'circe'
        font-weight 400
        color #000000
        padding-left 22px
        padding-right 22px
        border 1px solid #3172fd
        @media xs
            margin-bottom 15px
    &_inputWrapper
        flex-basis 47.6%
        @media xs
            flex-basis 100%
        &-error
            border-color pink
        &-required
            position relative
            &:before
                content '*'
                color red
                font-size 25px
                position absolute
                top -5px
                right -16px
                font-family 'circe'
    &_inputWrapper-error &_input
        border-color pink !important
    &_input
        height 43px
        border-radius 3px
        padding-top 3px
        &::placeholder
            color rgba(16,16,16,.4)
        &[readonly]
            border 1px solid #c0c0c0
    &_textarea
        height 87px
        background white
        width 100%
        max-width 100%
        min-width 100%
        padding-top 11px
        &::placeholder
            color rgba(16,16,16,.4)
    &_btn
        margin-left auto
        background-image linear-gradient(90deg, #f84f78 50%, #316fdf 50%)
        @media xs
            margin-right auto
            width 100%
        .Btn_iconWrapper
            &:before
                background white
            .Btn_icon
                &:after
                    background url('../img/common/svg/btn-arrow-blue.svg') no-repeat 55% 55%
    &_text
        text-align center
        margin-top 30px
        font-size 15px
        font-weight 400
        @media xs
            font-size 13px

    &_btnClose
        size 43px 43px
        background blue url('../img/common/svg/cross.svg') no-repeat center
        background-size 16px 16px
        border-radius 43px
        position absolute
        right -63px
        top 0
        cursor pointer
        display flex
        justify-content center
        align-items center
        transition all .25s 
        font-size 0
        @media smMinus
            top -63px
            right 0
            

