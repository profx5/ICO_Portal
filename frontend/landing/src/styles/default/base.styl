input, textarea, button
 	border none
 	outline none
 	background white
a
    text-decoration none
    color inherit
    cursor pointer 
    &:hover
        color inherit
        text-decoration none
        
fieldset
    border none
    outline none
    padding 0 0
    margin 0 0
    display block
 
ul, li
    padding 0 0
    margin 0 0

*
	box-sizing border-box
	padding 0 0
	margin 0 0
	&:before, &:after
		box-sizing border-box
  
html
    font-size 62.5%
    line-height 62.5%
    min-height 100%
    overflow-x hidden
    
body
    min-height 100%
    font-family 'Circe', 'Trebuchet MS', 'Tahoma', 'Arial', 'sans-serif'
    font-weight 300
    letter-spacing .4px
    font-size 1.6rem
    line-height normal
    color black
    scroll-behavior smooth
    overflow-x hidden

    
strong
    font-weight 600
b
    font-weight 700
    

section
    will-change transform

.container
    width 1070px
    padding 0 15px
    margin-left auto
    margin-right auto
    position relative
    @media smMinus
        width 100%
        max-width 100vw
        padding 0 30px
        
.container-fluid
    width 100%
    padding 0 40px
    position relative
    @media sm
        padding 0 30px

.HeaderPhantom
    font-family 'Gilroy'
    color #F5F5F5
    font-size 70px
    font-weight 800
    display block
    letter-spacing -.5px
    @media xs
        font-size 45px !important
        bottom -36px !important
    @media sm
        font-size 52px
        bottom -52px