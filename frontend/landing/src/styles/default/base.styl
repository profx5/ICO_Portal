input, textarea, button
 	border none
 	outline none
 	background white
a
    text-decoration none
    color inherit
    cursor pointer 
    &:hover
        color inherit
        text-decoration none
 
ul, li
    padding 0 0
    margin 0 0

*
	box-sizing border-box
	padding 0 0
	margin 0 0
	&:before, &:after
		box-sizing border-box
  
html
    font-size 62.5%
    line-height 62.5%
    min-height 100%
    
body
    min-height 100%
    font-family 'Circe', 'Trebuchet MS', 'Tahoma', 'Arial', 'sans-serif'
    font-weight 400
    letter-spacing .4px
    font-size 1.6rem
    color black
    
strong
    font-weight 600
b
    font-weight 700
    
.container
    width 1070px
    padding 0 15px
    margin-left auto
    margin-right auto